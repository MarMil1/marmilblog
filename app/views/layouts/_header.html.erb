<% if logged_in? %>
  <div class="nav-container">
    <div class="nav-sub-container">
      <div class="logo-container">
        <%= link_to "MARMIL_BLOG", root_path, id: "logo" %>
      </div>
      <div class="topnav" id="myTopnav">
        <div class="dropdown">
          <button class="dropbtn">
          <% if current_user.image_data  %>
            <%= image_tag current_user.image_url, class: "user-gen-blob" %>
          <% else %>
            <div data-comment-initial=<%= current_user.username[0].capitalize %>></div> 
          <% end %>
          </button>
          <div class="dropdown-content">
          <%= link_to current_user, class:"nav-user-container-link" do %>
              <div class="nav-user-container">
                <div class="nav-user-img">
                  <% if current_user.image_data  %>
                    <%= image_tag current_user.image_url, class: "user-gen-blob" %>
                  <% else %>
                    <div data-comment-initial=<%= current_user.username[0].capitalize %>></div> 
                  <% end %>
                </div>
                <div class="nav-username-email">
                  <div class="nav-username">
                    <%= current_user.username %>
                  </div>
                  <div class="nav-email">
                    <%= current_user.email %>
                  </div>
                </div>
              </div>
            <% end %>
            <%= link_to "Write", new_article_path, class:"nav-link" %>
            <%= link_to "Settings", edit_user_path(current_user), class:"nav-link" %>
            <%= link_to "About",   about_path, class:"nav-link" %>
            <%= link_to "Contact", contact_path, class:"nav-link" %>
            <%= link_to "Help",    help_path, class:"nav-link" %>
            <%= button_to "Log out", logout_path, method: :delete, class:"nav-link logout-header-btn", style:"background-color:lightred;" %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
<div class="nav-container">
  <div class="nav-sub-container">
    <%= link_to "MARMIL_BLOG", root_path, id: "logo" %>
    <div class="nav-login-btns">
      <%= link_to "Log in", login_path, class:"nav-login-btn" %>
      <%= link_to "Sign Up", signup_path, class:"nav-signup-btn" %>
    </div>
  </div>
</div>
<% end %>


<script>
// Navbar dropdown when mobile screen
  function myFunction() {
    var x = document.getElementById("myTopnav");
    if (x.className === "topnav") {
      x.className += " responsive";
    } else {
      x.className = "topnav";
    }
  }
</script>