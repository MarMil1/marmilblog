<div class="text-formater-container">
    <div style="display: flex; width: fit-content;">
        <button onclick="insertRedCarpetChars('**','**');" title="Bold"><strong>B</strong></button>
        <button onclick="insertRedCarpetChars('*', '*');" title="Italic"><em>I</em></button>
        <button onclick="insertRedCarpetChars('_', '_');" title="Underline"><u>U</u></button>
        <button onclick="insertRedCarpetChars('~~', '~~');" title="Strikethrough" style="text-decoration: line-through;"><div>S</div></button>
        <button onclick="insertRedCarpetChars('&quot;', '&quot;');" title="Quotes"><div>""</div></button>
        <button onclick="insertRedCarpetChars('&bull;', '');" title="Bulletpoint"><div>&bull;</div></button>
    </div>
    <div style="display: flex; width: fit-content;">
        <button onclick="insertRedCarpetChars('==', '==');" title="Highlight" style="background: #fcf8e3; width: 60px;"><div>Highlight</div></button>
        <button onclick="insertRedCarpetChars('```JavaScript', '```');" title="Code Block" style="width: 55px;"><div>&lt;/code&gt;</div></button>
        <button onclick="insertRedCarpetChars('&gt;', '');" title="Indent" style="width: 25px;"><div><i class="fa fa-indent" aria-hidden="true"></i></div></button>
        <button onclick="insertRedCarpetChars('###', '');" title="Subtitle"><div>h2</div></button>
    </div>
</div>

<script>
    // Insert characters for styling text in RedCarpet Markdown
    function insertRedCarpetChars(insertBefore, insertAfter) {
        const isTwoArguments = arguments.length > 1;
        const selStart = textarea.selectionStart;
        const selEnd = textarea.selectionEnd; 
        const prevText = textarea.value;
        textarea.value = prevText.substring(0, selStart) + (isTwoArguments ? insertBefore + prevText.substring(selStart, selEnd) + insertAfter : insertBefore) + prevText.substring(selEnd);
        textarea.setSelectionRange(isTwoArguments || selStart === selEnd ? selStart + insertBefore.length : selStart, (isTwoArguments ? selEnd : selStart) + insertBefore.length);
        textarea.focus();
    }
</script>

<style>
    .text-formater-container {
        position: relative;
        top: 210px;
        display: flex;
    }
    .text-formater-container div > *  {
        border: 1px solid #d2d2d2;
        padding: 2px;
        font-size: 12px;
        margin-right: 5px;
        width: 20px;
    }

    .text-formater-container > *:focus {
        outline-style: none;
    }

    @media screen and (max-width: 452px) {
        .text-formater-container {
            top: 240px;
            flex-direction: column;
            gap: 10px;
        }
    }
</style>