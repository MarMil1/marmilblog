<%= form_with model: article do |form| %>
<%= render 'shared/error_messages', object: form.object %>

    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </div>
    <br>
    
    <div>
        <%= form.submit %>
    </div>

<% end %>